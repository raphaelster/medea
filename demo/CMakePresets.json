{
    "version": 8,
    "configurePresets": [
        {
            "name": "GCC 14.2.1 x86_64-redhat-linux",
            "displayName": "GCC 14.2.1 x86_64-redhat-linux",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "${sourceDir}/out/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Debug",
            "description": "",
            "displayName": "",
            "inherits": [
                "GCC 14.2.1 x86_64-redhat-linux"
            ],
            "environment": {
                "COMPILER_EXTRA_FLAGS": "-Og -g -static -fsanitize=address -fsanitize=undefined"
            }
        },
        {
            "name": "Release",
            "description": "",
            "displayName": "",
            "inherits": [
                "GCC 14.2.1 x86_64-redhat-linux"
            ],
            "environment": {
                "COMPILER_EXTRA_FLAGS": "-O2"
            }
        }
    ]
}